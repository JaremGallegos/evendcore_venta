@{
}
<div class="min-h-screen w-full flex">
    <!-- Left side - Login form -->
    <div class="flex-1 flex items-center justify-center px-8">
        <div class="w-full max-w-[400px] space-y-6">

            <div class="flex justify-center">
                <img class="w-12 h-12 rounded-lg"
                    src="~/images/Mistral-Logo.png" />
            </div>

            <!-- Seccion del Título  -->
            <div class="space-y-2 text-center">
                <h1 class="text-2xl font-semibold tracking-tight">¡Bienvenido de Vuelta!</h1>
            </div>

            <!-- Form Section -->
            <div class="space-y-4">
                <!-- Email Field -->
                <form asp-action="Create">
                    <!-- Registro de Correo -->
                    <div class="space-y-2 mb-3">
                        <label for="email" class="text-sm">Correo</label>
                        <input id="email" type="email" required class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:ring-primary" />
                    </div>

                    <!-- Registro de Contraseña -->
                    <div class="space-y-2 mb-3">
                        <label for="password" class="text-sm">Contraseña</label>
                        <div class="relative">
                            <input id="password" type="password" required class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:ring-primary" />
                            <button type="button" onclick="setShowPassword(!showPassword)" class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700">
                                <svg v-if="showPassword" xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.522 5 12 5s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7s-8.268-2.943-9.542-7z" /></svg>
                                <svg v-else xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0012 19c-4.418 0-8.268-2.943-9.542-7a10.05 10.05 0 011.942-3.797M15.6 4.2A10.05 10.05 0 0112 5c-4.418 0-8.268 2.943-9.542 7a10.05 10.05 0 001.942 3.797" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.88 9.88L14.12 14.12" /></svg>
                            </button>
                        </div>
                    </div>

                    <!-- Verificacion de Contraseña -->
                    <div class="space-y-2 mb-3">
                        <label for="password" class="text-sm">Contraseña</label>
                        <div class="relative">
                            <input id="password" type="password" required class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:ring-primary" />
                            <button type="button" onclick="setShowPassword(!showPassword)" class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700">
                                <svg v-if="showPassword" xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.522 5 12 5s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7s-8.268-2.943-9.542-7z" /></svg>
                                <svg v-else xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0012 19c-4.418 0-8.268-2.943-9.542-7a10.05 10.05 0 011.942-3.797M15.6 4.2A10.05 10.05 0 0112 5c-4.418 0-8.268 2.943-9.542 7a10.05 10.05 0 001.942 3.797" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.88 9.88L14.12 14.12" /></svg>
                            </button>
                        </div>
                    </div>

                    <!-- Boton de Registro -->
                    <div class="space-y-2">
                        <input type="submit" value="Registrarse en Mistral" class="meven w-full bg-[#FFD233] hover:bg-[#FFD233]/90 text-black py-2 rounded-md" />
                    </div>
                </form>

                <!-- Divider -->
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t"></div>
                    </div>
                    <div class="relative flex justify-center text-xs uppercase">
                        <span class="bg-white px-2 text-gray-500">o</span>
                    </div>
                </div>
            </div>

            <!-- Links Section -->
            <div class="flex items-center justify-between text-sm">
                <span class="text-gray-500">
                    ¿Ya tiene una cuenta?
                    <a class="text-primary hover:underline" asp-controller="Login" asp-action="Login">Iniciar Sesión</a>
                </span>
                <a class="text-primary hover:underline" asp-controller="Landing" asp-action="Index">¿Volver a la Página Principal?</a>
            </div>

            <!-- Terms and Privacy Notice -->
            <div class="text-xs text-gray-500">
                Al hacer clic en "Registrarse", usted acepta los
                <a class="text-primary hover:underline" asp-controller="" asp-action="">Terminos del Servicio</a>
                y reconoce el
                <a class="text-primary hover:underline" asp-controller="" asp-action="">Aviso de Privacidad</a>.
            </div>
        </div>
    </div>

    <!-- Right side - Illustration -->
    <div class="hidden lg:flex flex-1 items-center justify-center bg-[#F5F2EE]">
        <div class="relative w-[400px] h-[400px]">
            <img src="~/images/pos_idee.svg" alt="Decorative illustration of a lightbulb hot air balloon" class="object-contain w-full h-full" />
        </div>
    </div>
</div>