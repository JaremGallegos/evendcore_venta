@{
    // Variables Globales


    SortedDictionary<String, String> chips = new SortedDictionary<String, String> {
        { "fa-brands fa-ideal", "Intuitivo" },
        { "fa-solid fa-check", "Eficiente" },
        { "fa-solid fa-code-compare", "Flexible" },
        { "fa-solid fa-expand", "Escalable" },
        { "fa-solid fa-toggle-on", "Sencillo" },
        { "fa-solid fa-spinner", "Accesible" },
        { "fa-solid fa-hand-point-up", "Fiable" },
        { "fa-solid fa-bolt", "Rápido" },
        { "fa-solid fa-compass", "Adaptable" },
        { "fa-brands fa-medium", "Moderno" }
    };

    var Comentarios = new List<(int id, string avatar, int resena, string contenido, string autor)> {
        (1, "https://lh3.googleusercontent.com/a/AGNmyxbX2TPKk12jw75OrsKw4bNbVkCofSbY-RMOWNKI=s96-c", 4, "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenan convallis.", "Jarem")
    };
}
<div class="min-h-screen bg-gradient-to-br from-indigo-100 via-white to-pink-100">
    <!-- Enzabezado Index -->
    <partial name="_Partials/_Header" />

    <!-- Parte principal Landing -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="text-center mb-16">
            <h1 class="text-6xl sm:text-7xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-pink-600 mb-3 leading-tight">
                LA MEJOR SOLUCIÓN
            </h1>
            <p class="text-2xl sm:text-3xl text-gray-700 mb-6">
                PARA TU NEGOCIO
            </p>
            <div class="flex flex-wrap justify-center gap-3 max-w-3xl mx-auto">
                @foreach (KeyValuePair<string, string> chip in chips) {
                    <span class="px-3 py-1 bg-indigo-100 text-indigo-800 text-sm font-medium rounded-full"><i class="@chip.Key"></i>&#32 @chip.Value</span>
                }
            </div>
        </div>

        <!-- Parte de acciones para interacción -->
        <div class="grid md:grid-cols-3 gap-8 mb-16">
            <div class="card shadow-lg hover:shadow-xl transition-shadow">
                <div class="card-header">
                    <h2 class="card-title text-xl font-semibold text-gray-800">
                        Objetivos & Recomendaciones
                    </h2>
                </div>
                <div class="card-body p-6">
                </div>
            </div>

            <div class="card shadow-lg hover:shadow-xl transition-shadow">
                <div class="card-header">
                    <h2 class="card-title text-xl font-semibold text-gray-800">
                        Comencemos a Mejorar mis Ventas
                    </h2>
                </div>
                <div class="card-body p-6">

                </div>
            </div>

            <div class="card shadow-lg hover:shadow-xl transition-shadow">
                <div class="card-header">
                    <h2 class="card-title text-xl font-semibold text-gray-800">
                        Beneficios
                    </h2>
                </div>
                <div class="card-body p-6">
                    <div class="space-y-4">

                    </div>
                </div>
            </div>
        </div>

        <!-- Sección de Comentarios -->
        <div class="mb-16">
            <h2 class="text-3xl font-bold text-center text-gray-800 mb-10">Lo que dicen nuestros clientes</h2>
            <div class="grid md:grid-cols-3 gap-8">
                @foreach(var (id, avatar, resena, contenido, autor) in Comentarios) {
                    <!-- Card Item Comentario -->
                    <div class="demo-card-square mdl-card mdl-shadow--2dp h-[20rem] w-[20rem]">
                        <div class="mdl-card__title mdl-card--expand"
                             style="color: #fff; background: url('@avatar') bottom right 15% no repeat #46B6AC;">
                            <h2 class="mdl-card__title-text">
                                @for (int i = 0; i < 5; i++) {
                                    <i class="fa-@((i < @resena) ? "solid text-[#FFBF00]" : "regular text-[#FFBF00]") fa-star"></i>
                                }
                            </h2>
                        </div>
                        <div class="mdl-card__supporting-text">
                            @contenido
                        </div>
                        <div class="mdl-card__actions mdl-card--border">
                            <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                                Contactar
                            </a>
                        </div>
                    </div>
                    <!-- #End Card Item Comentario -->
                }
            </div>
        </div>
    </main>
</div
