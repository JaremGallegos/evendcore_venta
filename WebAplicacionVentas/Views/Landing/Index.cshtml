@{
    // Variables Globales


    SortedDictionary<String, String> chips = new SortedDictionary<String, String> {
        { "fa-brands fa-ideal", "Intuitivo" },
        { "fa-solid fa-check", "Eficiente" },
        { "fa-solid fa-code-compare", "Flexible" },
        { "fa-solid fa-expand", "Escalable" },
        { "fa-solid fa-toggle-on", "Sencillo" },
        { "fa-solid fa-spinner", "Accesible" },
        { "fa-solid fa-hand-point-up", "Fiable" },
        { "fa-solid fa-bolt", "Rápido" },
        { "fa-solid fa-compass", "Adaptable" },
        { "fa-brands fa-medium", "Moderno" }
    };

    var Comentarios = new List<(int id, string avatar, int resena, string contenido, string autor)> {
        (1, "https://yt3.ggpht.com/m9yFCxSOWWNoKQRQ-pPiLucMtfuDGDqEXFwFDnqrmPT3EIrggvbn8Ch1U1ilsPtqD24TPJHN=s88-c-k-c0x00ffffff-no-rj", 4, "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenan convallis.", "Jarem"),
        (2, "https://yt3.ggpht.com/m9yFCxSOWWNoKQRQ-pPiLucMtfuDGDqEXFwFDnqrmPT3EIrggvbn8Ch1U1ilsPtqD24TPJHN=s88-c-k-c0x00ffffff-no-rj", 5, "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenan convallis.", "Juan"),
        (3, "https://yt3.ggpht.com/m9yFCxSOWWNoKQRQ-pPiLucMtfuDGDqEXFwFDnqrmPT3EIrggvbn8Ch1U1ilsPtqD24TPJHN=s88-c-k-c0x00ffffff-no-rj", 5, "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenan convallis.", "Juan"),
        (4, "https://yt3.ggpht.com/m9yFCxSOWWNoKQRQ-pPiLucMtfuDGDqEXFwFDnqrmPT3EIrggvbn8Ch1U1ilsPtqD24TPJHN=s88-c-k-c0x00ffffff-no-rj", 5, "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenan convallis.", "Juan")
    };

    var Novedades = new List<(int id, string admin, string icono, string tipo, string contenido, DateTime fecha)> {
        (1, "Admin1", "fa-solid fa-bell text-amber-400", "Información", "Posibles interrupciones en el servicio debido a condiciones climáticas", new DateTime(2024, 12, 10)),
        (2, "Admin2", "fa-solid fa-triangle-exclamation text-red-400", "Alerta", "Posibles interrupciones en el servicio debido a condiciones climáticas.", new DateTime(2024, 12, 11)),
        (3, "Admin3", "fa-solid fa-circle-plus text-lime-400", "Actualización", "Se ha implementado una nueva funcionalidad en el sistema.", new DateTime(2024, 12, 12))
    };
}
<div class="min-h-screen bg-gradient-to-br from-indigo-100 via-white to-pink-100">
    <!-- Enzabezado Index -->
    <partial name="_Partials/_Header" />

    <!-- Parte principal Landing -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="text-center mb-16">
            <h1 class="text-6xl sm:text-7xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-pink-600 mb-3 leading-tight">
                LA MEJOR SOLUCIÓN
            </h1>
            <p class="text-2xl sm:text-3xl text-gray-700 mb-6">
                PARA TU NEGOCIO
            </p>
            <div class="flex flex-wrap justify-center gap-3 max-w-3xl mx-auto">
                @foreach (KeyValuePair<string, string> chip in chips) {
                    <span class="px-3 py-1 bg-indigo-100 text-indigo-800 text-sm font-medium rounded-full"><i class="@chip.Key"></i>&#32 @chip.Value</span>
                }
            </div>
        </div>

        <!-- Parte de acciones para interacción -->
        <div class="grid md:grid-cols-3 gap-8 mb-16">
            <div class="card shadow-lg hover:shadow-xl transition-shadow">
                <div class="card-header">
                    <h2 class="card-title text-xl font-semibold text-gray-800">
                        Últilmas Novedades
                    </h2>
                </div>
                <div class="card-body p-6 mdl-layout--fixed-drawer overflow-auto h-[16rem] max-h-[16rem] max-w-full">
                    @foreach(var (id, admin, icono, tipo, contenido, fecha) in Novedades) {
                        <div class="tile tile-centered mb-4">
                            <div class="tile-action">
                                <div class="bg-blue-600 m-auto">
                                    <i class="fa-regular fa-envelope text-white p-2 rounded-lg"></i>
                                </div>
                            </div>
                            <div class="tile-content">
                                <div class="tile-title text-sm mb-1">&#32;<i class="@icono"></i>&#32;@tipo</div>
                                <div class="tile-subtitle text-wrap text-xs text-base/6 line-clamp-4">@contenido</div>
                                <small class="tile-subtitle text-gray">@admin · Publico · @fecha.ToString("yyyy-MM-dd")</small>
                            </div>
                            <div class="tile-action">
                                <button class="btn btn-link">
                                    <i class="fa-solid fa-up-right-from-square"></i>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-lg hover:shadow-xl transition-shadow">
                <div class="card-header">
                    <h2 class="card-title text-xl font-semibold text-gray-800">
                        Acciones Rápidas
                    </h2>
                </div>
                <div class="card-body p-6">

                </div>
            </div>

            <div class="card shadow-lg hover:shadow-xl transition-shadow">
                <div class="card-header">
                    <h2 class="card-title text-xl font-semibold text-gray-800">
                        Objetivos
                    </h2>
                </div>
                <div class="card-body p-6">
                    <div class="space-y-4">

                    </div>
                </div>
            </div>
        </div>

        <!-- Sección de Comentarios -->
        <div class="mb-16">
            <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Lo que dicen nuestros clientes</h2>
            <div class="grid md:grid-cols-4 gap-4">
                @foreach(var (id, avatar, resena, contenido, autor) in Comentarios) {
                    <!-- Card Item Comentario -->
                    <div class="demo-card-square mdl-card mdl-shadow--2dp h-[18rem] w-[18rem]">
                        <div class="mdl-card__title mdl-card--expand bg-gradient-to-r from-cyan-500 to-blue-500 color-white">
                            <h2 class="mdl-card__title-text">
                                @for (int i = 0; i < 5; i++) {
                                    <i class="fa-@((i < @resena) ? "solid text-[#FFBF00]" : "regular text-[#FFBF00]") fa-star"></i>
                                }
                            </h2>
                        </div>
                        <div class="mdl-card__supporting-text">
                           <div class="font-medium text-gray-500">@@@autor</div>
                           <div class="text-xs text-gray-400 mb-2">Cliente de eVend</div>
                           <p class="text-gray-600 mb-2 text-sm">@contenido</p>
                        </div>
                        <div class="mdl-card__actions mdl-card--border">
                            <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect hover:no-underline">
                                <i class="fa-solid fa-comment mdl-button--colored"></i>&#32;Contactar
                            </a>
                        </div>
                        <div class="mdl-card__menu">
                            <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect" alt="Cuenta de Usuario">
                                <img src="@avatar" alt="Usuario" />
                            </button>
                        </div>
                    </div>
                    <!-- #End Card Item Comentario -->
                }
            </div>
        </div>
        <!-- #End Sección de Comentarios -->

        <!-- CTA sección -->
        <div class="text-center mb-4">
            <h2 class="text-3xl font-bold text-gray-800 mb-3">¿Listo para llevar tu negocio al siguiente nivel?</h2>
            <p class="text-xl text-gray-600 mb-4">Únete a miles de empresarios que ya están aprovechando el poder de eVend</p>
            <button class="btn btn-primary rounded mb-3 text-base px-3 py-0">Comienza tu prueba gratuita</button>
        </div>
        <!-- #End Sección CTA -->
    </main>
</div
