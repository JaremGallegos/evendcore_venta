@{
    var modulos = new List<string>(){
        "Inicio", "Documentación", "Actualizaciones", "Comentarios"
    };
}
<header class="border-b bg-white/80 backdrop-blur-sm sticky top-0 z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="h-16 flex items-center justify-between">
            <div class="flex items-center space-x-8">
                <a href="/" class="text-2xl font-bold text-indigo-600">
                    eVend
                </a>
                <nav class="mb:flex items-center space-x-4">
                    @foreach (string modulo in modulos) {
                        <a href="#" class="text-sm font-medium text-gray-700 hover:text-indigo-600 transition-colors">
                            @modulo
                        </a>
                    }
                </nav>
            </div>
            <div class="flex items-center space-x-4">
                <button class="btn">Iniciar Sesión</button>
                <button class="btn btn-primary">Registrarse</button>
            </div>
        </div>
    </div>
</header>
